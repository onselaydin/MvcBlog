
@{
    ViewBag.Title = "Index";
}

@model IEnumerable<MvcBlog.Models.Makale>
<h2>Makaleler</h2>

<table>
    <tr>
        <th>Başlık</th>
        <th>Yazar</th>
        <th>Kategori</th>
        <th>Yayım Tarihi</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Baslik</td>
            <td>@item.Kullanici.Adi @item.Kullanici.Soyadi</td>
            <td>@item.Kategori.Adi</td>
            <td>@item.YayimTarihi</td>
            <td></td>
          
        </tr>
    }
    
</table>

