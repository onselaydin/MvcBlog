
@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Güncelleme Ekranı</title>
</head>
<body>
    <h2>Program Güncelleme Ekranı</h2>

    <div align="center">
        <h1 align="center" style="background-color:aqua; color:maroon; border-radius:25px;  box-shadow:10px 10px 10px 10px yellow; width:800px;">
           Güncelleme
        </h1>
    </div>

    <div>


        @using (Html.BeginForm("Edit", "Yonetim", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

            <table border="1" align="center" style="background-image:url(/images/colorful_ride-wide.jpg); background-color:#4B2A2F;
         border:double solid maroon; font-weight:bold; color:white; padding:5px 8px 4px 10px; border-color:white; font-size:20px;
         border-radius:25px; box-shadow:10px 10px 10px 10px darkgreen; font-weight:bold">

                <tr>
                    <td>@Html.Label("Dosya Adı")</td>
                    <td>@Html.TextBox("DosyaAdi")</td>
                </tr>

                <tr>
                    <td>@Html.Label("Açıklama")</td>
                    <td>@Html.TextBox("DosyaAciklama")</td>
                </tr>

                <tr>
                    <td>@Html.Label("Dosya Boyutu")</td>
                    <td>@Html.TextBox("DosyaBoyutu")</td>
                </tr>

                <tr>
                    <td>@Html.Label("Link")</td>
                    <td>@Html.TextBox("Link")</td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        @*<input type="button" style="font-size:25px;align-content:center" value="Edit" />*@

                        <input type="submit" style="font-size: 25px; font-weight: bold" name="sb1" value="Edit" />
                    </td>
                </tr>

            </table>

        }
        <br />
        <br />
        <a href="/Yonetim/IndirmeListesi" style="font-size:25px;align-content:center">
            <b align="center">
                Listeye Dön
            </b>
        </a>


    </div>
</body>

</html>