
@{
    ViewBag.Title = "GirisYap";
}

<h2>GirisYap</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td colspan="2">
                @ViewBag.Mesaj
            </td>
        </tr>
        <tr>
            <td>Kullanıcı Adı</td>
            <td><input class="form-control" type="text" name="KullaniciAdi" value="" required /></td>
        </tr>
        <tr>
            <td>Parola</td>
            <td><input class="form-control" type="password" name="Parola" value="" required /></td>
        </tr>
        <tr>
            <td><input class="form-control" type="submit" name="btnGiris" value="Giriş" /></td>
            <td></td>
        </tr>
    </table>
}